<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.ProyectoFinal_ReviewsSystem" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <item name="android:background">@color/fondoNegro</item>
        <item name="android:textColor">@color/white</item>
        <item name="colorPrimary">@color/boton</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>

    <style name="CustomDatePickerTheme" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorPrimary">@color/boton</item>
        <item name="colorAccent">@color/boton</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColorSecondary">@color/white</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:colorBackground">@color/fondoNegro</item>
        <item name="android:windowBackground">@color/fondoNegro</item>
        <item name="android:datePickerStyle">@style/CustomDatePickerStyle</item>
    </style>

    <style name="CustomDatePickerStyle" parent="android:Widget.Material.Light.DatePicker">
        <item name="android:headerBackground">@color/fondoNegro</item>
        <item name="android:headerMonthTextAppearance">@style/CustomDatePickerTextAppearance</item>
        <item name="android:headerDayOfMonthTextAppearance">@style/CustomDatePickerTextAppearance</item>
        <item name="android:headerYearTextAppearance">@style/CustomDatePickerTextAppearance</item>
        <item name="android:yearListSelectorColor">@color/boton</item>
    </style>

    <style name="CustomDatePickerTextAppearance" parent="android:TextAppearance.Material.Medium">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="CustomAlertDialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorPrimary">@color/boton</item>
        <item name="colorAccent">@color/boton</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColorSecondary">@color/white</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:colorBackground">@color/fondoNegro</item>
        <item name="android:windowBackground">@color/fondoNegro</item>
        <item name="android:listDivider">@drawable/divider_line</item>
        <!-- NUEVOS: Para forzar el color del texto en listas -->
        <item name="android:textColorAlertDialogListItem">@color/white</item>
        <item name="textColorAlertDialogListItem">@color/white</item>
        <item name="android:textAppearanceListItem">@style/CustomListItemTextAppearance</item>
        <item name="android:textAppearanceListItemSmall">@style/CustomListItemTextAppearance</item>
    </style>


    <style name="CustomListItemTextAppearance" parent="android:TextAppearance.Material.Body1">
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorPrimary">@color/white</item>
    </style>


    <style name="CustomChipStyle" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="chipBackgroundColor">@color/chip_background_selector</item>
        <item name="android:textColor">@color/white</item>
        <item name="chipStrokeColor">@color/chip_stroke_selector</item>
        <item name="chipStrokeWidth">2dp</item>
        <item name="android:checkable">true</item>
    </style>
</resources>