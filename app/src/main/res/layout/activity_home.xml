<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    tools:context=".Home">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp">

        <ImageView
            android:id="@+id/profile_home"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:src="@drawable/baseline_account_circle_24" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="70dp"
            android:fontFamily="@font/inter_18pt_bold"
            android:padding="10dp"
            android:text="@string/tittle_home"
            android:textSize="32sp"
            android:textAlignment="center" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="10dp">

        <ImageView
            android:id="@+id/filter_home"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:src="@drawable/filter"
            />

        <SearchView
            android:id="@+id/searchView"
            android:layout_width="280dp"
            android:layout_height="40dp"
            android:layout_marginRight="20dp"
            android:iconifiedByDefault="false"
            android:searchIcon="@drawable/ic_search"
            android:queryBackground="@color/white"
            android:queryHint="Buscar " />

    </LinearLayout>



    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="30dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/movies_button"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@color/tituloRojo"
            android:fontFamily="@font/inter_18pt_regular"
            android:text="Movies"
            android:textAllCaps="false"
            android:textSize="15sp"
            />
        <Button
            android:id="@+id/series_button"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@color/tituloRojo"
            android:fontFamily="@font/inter_18pt_regular"
            android:text="Series"
            android:textAllCaps="false"
            android:textSize="15sp"
            android:layout_marginLeft="20dp"
            />
        <Button
            android:id="@+id/books_button"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@color/tituloRojo"
            android:fontFamily="@font/inter_18pt_regular"
            android:text="Books"
            android:textAllCaps="false"
            android:textSize="15sp"
            android:layout_marginLeft="20dp"
            />

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:fontFamily="@font/inter_18pt_bold"
        android:text="@string/popular_home"
        android:textColor="@color/white"
        android:textSize="24sp" />

    <GridView
        android:id="@+id/movies_catalog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:numColumns="3"
        android:paddingHorizontal="6dp" >

    </GridView>

<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_gravity="end">
    <Button
        android:id="@+id/btnAddContent_home"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+"
        android:textSize="25sp"
        android:background="@drawable/circle_button"
        />

</LinearLayout>
</LinearLayout>