<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="85dp"
        android:layout_height="113dp"
        android:layout_gravity="center"
        android:id="@+id/image_movie_cell"
        android:scaleType="fitXY"
        android:layout_marginBottom="5dp"/>

    <TextView
        android:id="@+id/movie_title_cell"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:textSize="15sp"
        android:fontFamily="@font/inter_18pt_bold"
        android:layout_gravity="center"
        android:layout_marginBottom="5dp"
        />

    <LinearLayout
        android:layout_gravity="center"
        android:id="@+id/layoutStars"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="4dp">

        <ImageView
            android:id="@+id/star1"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:src="@android:drawable/btn_star_big_off"
            android:adjustViewBounds="true"
            android:contentDescription="star 1" />

        <ImageView
            android:id="@+id/star2"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:src="@android:drawable/btn_star_big_off"
            android:adjustViewBounds="true"
            android:contentDescription="star 2" />

        <ImageView
            android:id="@+id/star3"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:src="@android:drawable/btn_star_big_off"
            android:adjustViewBounds="true"
            android:contentDescription="star 3" />

        <ImageView
            android:id="@+id/star4"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:src="@android:drawable/btn_star_big_off"
            android:adjustViewBounds="true"
            android:contentDescription="star 4" />

        <ImageView
            android:id="@+id/star5"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:src="@android:drawable/btn_star_big_off"
            android:adjustViewBounds="true"
            android:contentDescription="star 5" />

    </LinearLayout>

</LinearLayout>