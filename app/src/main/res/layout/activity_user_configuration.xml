<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".UserConfiguration">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp">

        <ImageView
            android:id="@+id/backHome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:src="@drawable/baseline_arrow_back_24" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/inter_18pt_bold"
            android:textAlignment="center"
            android:layout_gravity="center"
            android:layout_marginLeft="115dp"
            android:padding="10dp"
            android:text="@string/titleSettings" />

    </LinearLayout>

    <ImageView
        android:id="@+id/imageSelector_settings"
        android:background="@drawable/baseline_account_circle_24"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_gravity="center"
        android:scaleType="centerCrop"/>

    <EditText
        android:hint="@string/inputName_Settings"
        android:textColor="@color/black"
        android:id="@+id/input_settings_name"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_margin="30dp"
        android:background="@color/white"/>

    <EditText
        android:id="@+id/birthdatePicker_settings"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:background="@drawable/edittext_background"
        android:clickable="true"
        android:cursorVisible="false"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:hint="@string/inputBirthDate_Settings"
        android:inputType="none"
        android:padding="8dp"
        android:layout_margin="30dp"
        android:drawableEnd="@drawable/ic_calendar"
        android:drawablePadding="8dp"/>

    <EditText
        android:id="@+id/genderSelector_settings"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_margin="30dp"
        android:background="@drawable/edittext_background"
        android:clickable="true"
        android:cursorVisible="false"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:hint="@string/selectGender_Settings"
        android:inputType="none"
        android:padding="8dp"
        android:drawableEnd="@drawable/ic_person"
        android:drawablePadding="8dp"/>

    <Button
        android:id="@+id/btnSave_Settings"
        android:text="@string/btnSave_settings"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/round_button"
        android:backgroundTint="@color/boton"/>
    <Button
        android:id="@+id/btnChangePassword_Settings"
        android:text="@string/btnChangePassword_settings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/round_button"
        android:layout_margin="20dp"
        />

    <Button
        android:id="@+id/btnLogout_settings"
        android:text="@string/btnLogout_settings"
        android:textSize="20sp"
        android:textColor="@color/boton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="40dp"
        style="@style/Widget.Material3.Button.IconButton.Outlined"
        />



</LinearLayout>